# IMAGEN MODELO
FROM eclipse-temurin:17.0.11_9-jdk

# INFORMAR EL PUERTO QUE UTILIZARÁ LA APLICACIÓN (INFORMATIVO)
EXPOSE 8080

# DIRECTORIO RAÍZ
WORKDIR /root

# COPIAR Y PEGAR ARCHIVOS DENTRO DEL CONTENEDOR
COPY ./pom.xml /root
COPY ./.mvn /root/.mvn
COPY ./mvnw /root

# ASEGURAR PERMISOS DE EJECUCIÓN
RUN chmod +x ./mvnw

# DESCARGAR LAS DEPENDENCIAS
RUN ./mvnw dependency:go-offline

# COPIAR EL CÓDIGO FUENTE DENTRO DEL CONTENEDOR
COPY ./src /root/src

# CONSTRUIR EL PROYECTO
RUN ./mvnw clean install -DskipTests

# LEVANTAR LA APLICACIÓN CUANDO EL CONTENEDOR SE EJECUTE
ENTRYPOINT ["java", "-jar", "/root/target/taller-0.0.1-SNAPSHOT.jar"]
